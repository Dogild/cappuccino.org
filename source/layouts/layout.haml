<!doctype html>

%html
  %head
    %title= data.page.title || "Cappuccino Web Framework - Build Desktop Class Applications in Objective-J and JavaScript"
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
    %link{:href => "/css/main.css", :rel => "stylesheet", :type => "text/css"}
    %link{:href => "http://fonts.googleapis.com/css?family=Lato:300,400,700,900,300italic,400italic,700italic,900italic", :rel => "stylesheet", :type => "text/css"}

  - containing_path = request.path
  - classes = "file-" + File.basename(containing_path).parameterize
  - while containing_path = File.dirname(containing_path) and containing_path != "." and containing_path != "/"; classes << " folder-" + containing_path.parameterize; end

  %body{:class => classes}
    %a.scrolltop{:href => "#"}
      %span up

    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.brand{:href => "/"}
            %img{:alt => "logo", :src => "/img/cappuccino-website-logo.png"}/
          .nav-collapse.collapse
            %ul.nav.pull-right
              %li
                %a.scroller{"data-section" => "#features", :href => "/#features"} Features
              %li
                %a.scroller{"data-section" => "#download", :href => "/downloads.html#download"} Download
              %li
                %a{:href => "/learn/"} Learn
              %li
                %a{:href => "/contribute.html"} Contribute
              %li
                %a{:href => "/blog/"} Blog

    = yield

    #footer
      .container
        .row
          .span6.links
            %h3 Links
            .row
              .span2
                %h4 Get Started
                = link_to "Features", "/#features"
                = link_to "Tutorials", "/learn/"
                = link_to "Download", "/downloads.html"
                = link_to "API Docs", "/learn/documentation/"
              .span2
                %h4 Contribute
                %a
                = link_to "Bug reports", "/contribute.html#bug-reports"
                = link_to "Source Code", "https://github.com/cappuccino/cappuccino"
                = link_to "Wiki", "https://github.com/cappuccino/cappuccino/wiki"
              .span2
                %h4 Get Answers
                = link_to "Blog", "/blog/"
                %a
                  Mailing list
                %a
                  IRC Channel
                %a
                  FAQ

        %hr
          .row.copyright
            .span5
              %h3 Social
              %a.social.tw{:href => "https://twitter.com/cappuccino"}
                %i.i_twitter
            .pull-right.copy
              %p Copyright &copy; 2012 - Cappuccino Project
    %script{:src => "http://code.jquery.com/jquery-latest.js"}
    %script{:src => "/js/bootstrap.min.js"}
    %script{:src => "/js/theme.js"}
